{
  "name": "web",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "next build",
    "start": "next start -p 3000",
    "test": "echo \"Error: no test specified\" && exit 0",
    "test:local": "echo \"Error: no test specified\" && exit 0",
    "test:e2e": "playwright test",
    "test:smoke:e2e": "echo \"Error: no test specified\" && exit 0",
    "test:regression:e2e": "echo \"Error: no test specified\" && exit 0",
    "test:perf": "mkdir -p performance_test_reports && export CHROME_PATH=\"/opt/azure-agent/.cache/puppeteer/chrome/*/chrome-linux64/chrome cut -d ' ' -f1\" && echo CHROME_PATH && node perf/lighthouse/main.mjs",
    "test:perf:local": "node perf/lighthouse/main.mjs",
    "migrate": "db-migrate up"
  },
  "nodemonConfig": {
    "watch": [
      "../../packages/auth/src/**/*",
      "../../packages/feature-flags/src/**/*",
      "../../packages/messages/src/**/*"
    ],
    "ext": "ts,tsx,json",
    "exec": "next dev -p 3000"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.627.0",
    "@aws-sdk/s3-request-presigner": "^3.627.0",
    "analytics": "*",
    "auth": "*",
    "building-blocks-sdk": "*",
    "dayjs": "^1.11.10",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "design-system": "*",
    "fast-csv": "^5.0.1",
    "feature-flags": "*",
    "messages": "*",
    "next": "14.2.5",
    "next-intl": "^3.17.2",
    "nodemailer": "^6.9.13",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "server-only": "^0.0.1",
    "sqids": "^0.3.0",
    "truelayer-embedded-payment-page": "^0.2.22",
    "truelayer-signing": "^0.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "20.10.4",
    "@types/pg": "^8.11.0",
    "@types/react": "18.2.45",
    "chrome-launcher": "^1.1.2",
    "fs": "0.0.1-security",
    "lighthouse": "^12.2.1",
    "puppeteer": "^23.5.0",
    "request": "^2.88.2",
    "typescript": "5.3.3"
  }
}
