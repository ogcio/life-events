{
  "name": "web",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "next build",
    "start": "next start -p 3000",
    "test:headed:e2e": "playwright test --headed",
    "test:headless:e2e": "playwright test",
    "test:debug:e2e": "playwright test --ui",
    "test:smoke:e2e": "playwright test --grep @smoke",
    "test:regression:e2e": "playwright test --grep @regression",
    "test:generate:report": "npx allure serve allure-results",
    "migrate": "db-migrate up"
  },
  "nodemonConfig": {
    "watch": [
      "../../packages/auth/src/**/*",
      "../../packages/feature-flags/src/**/*",
      "../../packages/messages/src/**/*"
    ],
    "ext": "ts,tsx,json",
    "exec": "next dev -p 3000"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.525.0",
    "@aws-sdk/s3-request-presigner": "^3.525.0",
    "analytics": "*",
    "auth": "*",
    "building-blocks-sdk": "*",
    "dayjs": "^1.11.10",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "design-system": "*",
    "feature-flags": "*",
    "messages": "*",
    "next": "14.2.2",
    "next-intl": "^3.7.0",
    "nodemailer": "^6.9.13",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "server-only": "^0.0.1",
    "sqids": "^0.3.0",
    "truelayer-embedded-payment-page": "^0.2.22",
    "truelayer-signing": "^0.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "20.10.4",
    "@types/pg": "^8.11.0",
    "@types/react": "18.2.45",
    "allure-commandline": "^2.29.0",
    "allure-playwright": "^3.0.0-beta.3",
    "typescript": "5.3.3"
  }
}
