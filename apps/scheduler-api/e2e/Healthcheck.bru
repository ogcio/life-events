meta {
  name: Healthcheck
  type: http
  seq: 1
}

get {
  url: {{host}}/health
  body: none
  auth: none
}

assert {
  res.status: eq 200
  res.body.status: eq 'ok'
}

tests {
  test("res.status should be 200", function() {
    const data = res.getBody();
    expect(res.getStatus()).to.equal(200);
  });
  test("res.body should be correct", function() {
    const data = res.getBody();
    expect(data.status).to.equal('ok');
  });
}
