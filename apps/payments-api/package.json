{
  "name": "payments-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "test": "TAP_RCFILE=tap.yml tap",
    "test:e2e": "cd ./e2e && bru run --env local",
    "test:dev": "cd ./e2e && bru run --env dev",
    "start": "node dist/index.js",
    "dev": "nodemon | pino-pretty",
    "lint": "eslint . --ext .ts",
    "generate-ts-client": "npx openapi-typescript ./openapi-definition.yml -o ../../packages/building-blocks-sdk/services/payments/schema.d.ts",
    "build": "rm -rf dist && tsc -p tsconfig.prod.json && cp logo.png dist/"
  },
  "nodemonConfig": {
    "watch": [
      "../../packages/feature-flags/src/**/*",
      "../../packages/messages/src/**/*",
      "../../packages/api-auth/**/*",
      "../../packages/logging-wrapper/src/**/*",
      "../../packages/error-handler/src/**/*",
      "./**/*"
    ],
    "ext": "ts,json",
    "exec": "node --import tsx index.ts"
  },
  "type": "module",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.4.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/postgres": "^5.2.2",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.0.1",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@fastify/under-pressure": "^8.5.1",
    "@sinclair/typebox": "^0.32.35",
    "auth": "*",
    "api-auth": "*",
    "dotenv": "^16.4.5",
    "error-handler": "*",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "logging-wrapper": "*",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "@types/pg": "^8.11.6",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@usebruno/cli": "^1.22.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "openapi-typescript": "^7.1.1",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "tap": "^21.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
