{
  "name": "profile",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "next build",
    "start": "next start -p 3003",
    "test:e2e": "playwright test",
    "migrate": "db-migrate up && db-migrate --config database-shared.json up:shared",
    "migrate:create": "db-migrate create $npm_config_name --sql-file"
  },
  "nodemonConfig": {
    "watch": [
      "../../packages/auth/src/**/*",
      "../../packages/feature-flags/src/**/*",
      "../../packages/messages/src/**/*"
    ],
    "ext": "ts,tsx,json",
    "exec": "next dev -p 3003"
  },
  "dependencies": {
    "auth": "*",
    "building-blocks-sdk": "*",
    "dayjs": "^1.11.10",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "design-system": "*",
    "feature-flags": "*",
    "messages": "*",
    "next": "14.2.5",
    "next-intl": "^3.17.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "server-only": "^0.0.1",
    "web": "*"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "20.10.4",
    "@types/pg": "^8.11.0",
    "@types/react": "18.2.45",
    "typescript": "5.3.3"
  }
}
