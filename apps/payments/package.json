{
  "name": "payments",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "next build",
    "start": "next start -p 3001",
    "test": "echo \"Error: no test specified\" && exit 0",
    "test:local": "echo \"Error: no test specified\" && exit 0",
    "test:headed:e2e": "playwright test --headed",
    "test:headless:e2e": "playwright test",
    "test:debug:e2e": "playwright test --ui",
    "test:smoke:e2e:disabled": "playwright test --grep @smoke",
    "test:smoke:e2e": "echo \"Error: no test specified\" && exit 0",
    "test:regression:e2e:disabled": "playwright test --grep @regression",
    "test:regression:e2e": "echo \"Error: no test specified\" && exit 0",
    "test:generate:report": "npx allure serve allure-results",
    "test:perf": "mkdir -p test_reports && mkdir -p test_reports/perf && echo \"Error: no test specified\" && exit 0",
    "migrate": "db-migrate up",
    "seed": "node --import tsx ./migrations/seeding/index.ts",
    "lint": "next lint"
  },
  "nodemonConfig": {
    "watch": [
      "../../packages/auth/**/*",
      "../../packages/feature-flags/**/*",
      "../../packages/shared-components/**/*"
    ],
    "ext": "ts,tsx, json",
    "exec": "next dev -p 3001"
  },
  "dependencies": {
    "@stripe/react-stripe-js": "^2.7.1",
    "@stripe/stripe-js": "^3.4.1",
    "allure-commandline": "^2.30.0",
    "analytics": "*",
    "auth": "*",
    "building-blocks-sdk": "*",
    "dayjs": "^1.11.11",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "design-system": "*",
    "feature-flags": "*",
    "next": "14.2.5",
    "next-intl": "^3.17.2",
    "pg": "^8.11.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "server-only": "^0.0.1",
    "shared-components": "*",
    "sqids": "^0.3.0",
    "stripe": "^15.8.0",
    "truelayer-embedded-payment-page": "^0.2.24",
    "truelayer-signing": "^0.1.7"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.44.1",
    "@types/node": "20.12.13",
    "@types/pg": "^8.11.6",
    "@types/react": "18.3.3",
    "allure-playwright": "^3.0.0-beta.7",
    "dotenv": "^16.4.5",
    "eslint-config-next": "^14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "tsx": "^4.11.0",
    "typescript": "5.4.5"
  }
}
